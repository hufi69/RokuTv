{
  "name": "greater-love-roku",
  "version": "3.1.1",
  "description": "Greater Love TV Roku Channel",
  "scripts": {
    "build": "npx @rokucommunity/bslint \"source/**/*.brs\" \"components/**/*.brs\"",
    "package": "npm run build && ./package-roku.sh",
    "package:zip": "./package-roku.sh",
    "package:clean": "rm -f GreaterLoveTV_*.zip GreaterLoveTV_*.pkg",
    "deploy": "roku-deploy",
    "watch": "roku-deploy --watch"
  },
  "devDependencies": {
    "@rokucommunity/bslint": "^0.8.20",
    "roku-deploy": "^3.12.1"
  }
}